      div
        input#disableKeyboardShortcuts(type='checkbox')
        label(for='disableKeyboardShortcuts') Disable keyboard shortcuts
      div
        input#soundsPlayable(type='checkbox')
        label(for='soundsPlayable') Play sounds
      div
        input#useInlineResourceSwatch(type='checkbox')
        label(for='useInlineResourceSwatch') Show inline resource pop-up
      div
        input#allowInlinePanning(type='checkbox', checked='checked')
        label(for='allowInlinePanning') Allow inline panning
      div
