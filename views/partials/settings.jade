#settings-dialog
  #settings-tabs
    ul
      li
        a(href='#user-interface') User interface
      li
        a(href='#agent-settings') Agent
      li
        a(href='#resource-settings') Resource
      li
        a(href='#modules') Modules
      li
        a(href='#testing') Testing
    #user-interface
      div
        input#noticesVisible(type='checkbox', checked='checked')
